// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  login     String   @unique // Use login/email as the unique identifier
  password  String // Hashed password
  createdAt DateTime @default(now())
  orders    Order[]
}

model Order {
  id            Int      @id @default(autoincrement())
  theme         String
  description   String
  referenceFile String? // Optional file path or URL
  createdAt     DateTime @default(now())
  user          User?    @relation(fields: [userId], references: [id])
  userId        Int? // Nullable, if order can be placed by non-logged-in user

  @@index([userId]) // Indexing for faster lookups
}
